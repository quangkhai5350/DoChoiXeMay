<div class="table-responsive">
    <table class="table table-hover table-striped" style="margin-bottom:0">
        <thead>
            <tr class="canhgiua" style="background-color: #00bcd4">
                <th class="canhgiua" style="max-width: 15px">STT</th>
                <th class="canhgiua">Tên Sản Phẩm</th>
                <th class="canhgiua">Số Lượng</th>
                <th class="canhgiua" style="width:230px">Giá Nhập Cuối</th>
                <th class="canhgiua" style="max-width: 15px">Hình 1</th>
                <th class="canhgiua" style="max-width: 15px">Hình 2</th>
                <th class="canhgiua" style="max-width: 15px">Hình 3</th>
            </tr>
        </thead>
        <tbody style="border: 2px solid black !important">
            @foreach (DoChoiXeMay.Models.HangHoa Item in ViewBag.HHTEK)
            {
                <tr class="canhgiua" style="border-bottom: 2px solid black !important">
                    <td>@Item.GhiChu</td>
                    <td>@Item.Ten</td>
                    <td>@Item.SoLuong</td>
                    <td>@Html.FormatValue(Item.GiaNhap, "{0:#,###,###}")</td>
                    <td>
                        @if (File.Exists(Request.MapPath("~/Areas/Admin/Content/imgxuatnhap/" + Item.Hinh1)))
                        {
                            <a target="_blank" href="~/Areas/Admin/Content/imgxuatnhap/@Item.Hinh1">
                                <i class="glyphicon glyphicon-download-alt"></i>
                            </a>
                        }
                    </td>
                    <td>
                        @if (File.Exists(Request.MapPath("~/Areas/Admin/Content/imgxuatnhap/" + Item.Hinh2)))
                        {
                            <a target="_blank" href="~/Areas/Admin/Content/imgxuatnhap/@Item.Hinh2">
                                <i class="glyphicon glyphicon-download-alt"></i>
                            </a>
                        }
                    </td>
                    <td style="border-right: 2px solid black !important">
                        @if (File.Exists(Request.MapPath("~/Areas/Admin/Content/imgxuatnhap/" + Item.Hinh3)))
                        {
                            <a target="_blank" href="~/Areas/Admin/Content/imgxuatnhap/@Item.Hinh3">
                                <i class="glyphicon glyphicon-download-alt"></i>
                            </a>
                        }
                    </td>

                </tr>

            }
        </tbody>
        <tfoot>
            <tr class="canhgiua">
                <td></td>
                <td>Loại: @ViewBag.TongLoai</td>
                <td style="color:chocolate">
                    Tổng: @ViewBag.Tongsp
                </td>
            </tr>
        </tfoot>
    </table>

</div>
